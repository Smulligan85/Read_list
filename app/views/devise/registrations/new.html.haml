.jumbotron
  .container.open-text
    %h2 Sign up
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .form-group
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter Name"

      .form-group
        = f.label :email
        %br/
        = f.email_field :email, class: 'form-control', placeholder: "Enter Email"

      .form-group
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Enter Password"

      .form-group
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Enter Password Again"
      .actions
        %br/
        = f.submit "Sign up", class: 'btn btn-primary'

/ = render "devise/shared/links"